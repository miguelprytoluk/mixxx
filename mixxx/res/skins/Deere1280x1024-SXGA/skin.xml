<!DOCTYPE skin>
<skin>
  <WidgetGroup>
    <Size>me,me</Size>
    <Style>
      QGroupBox { background-color: red; border: 0px solid yellow; margin: 0px 0px 0px 0px;}
    </Style>
    <Layout>vertical</Layout>
    <Children>
      <!-- Deck 1/2 & Mixer Horizontal Row -->
      <WidgetGroup>
        <!-- grow as wide as possible but do not grow taller than its contents -->
        <Size>me,max</Size>
        <Style>QGroupBox { background-color: green; border: 0px solid yellow; margin: 0px 0px 0px 0px;}</Style>
        <Layout>horizontal</Layout>
        <Children>

          <!-- Deck 1 -->
          <WidgetGroup>
            <!-- grow as wide as possible but do not grow taller than its contents -->
            <Size>me,max</Size>
            <Style>QGroupBox { background-color: red; border: 0px solid yellow; margin: 0px 0px 0px 0px;}</Style>
            <Layout>vertical</Layout>
            <Children>

              <!-- deck 1 collapsing waveform & spinning vinyl widget-->
              <WidgetGroup>
                <!-- grow as wide as possible but stay fixed at 119 pixels high -->
                <Size>me,119</Size>
                <Layout>horizontal</Layout>
                <Children>
                  <Visual>
                    <Channel>1</Channel>
                  </Visual>
                  <WidgetGroup>
                    <!-- do not grow larger than the size of its contents -->
                    <Size>max,max</Size>
                    <Style>QGroupBox { border: 0px solid green; } QWidget { margin: 0; padding: 0;} </Style>
                    <Layout>horizontal</Layout>
                    <Children>
                      <Spinny>
                        <Channel>1</Channel>
                        <PathBackground>vinyl_spinny1_background.png</PathBackground>
                        <PathForeground>vinyl_spinny1_foreground.png</PathForeground>
                        <PathGhost>vinyl_spinny1_foreground_ghost.png</PathGhost>
                      </Spinny>
                    </Children>
                    <Connection>
                      <ConfigKey>[Spinny1],show_spinny</ConfigKey>
                      <BindProperty>visible</BindProperty>
                    </Connection>
                  </WidgetGroup>
                </Children>
              </WidgetGroup>
              <!-- end deck 1 collapsing waveform & spinning vinyl widget-->

              <!-- deck 1 overview and controls -->
              <WidgetGroup>
                <Size>me,max</Size>
                <Layout>horizontal</Layout>
                <Children>
                  <Overview>
                    <Channel>1</Channel>
                    <Size>me,43</Size>
                    <BgPixmap>style/style_bg_woverview.png</BgPixmap>
                    <Connection>
                      <ConfigKey>[Channel1],playposition</ConfigKey>
                      <EmitOnDownPress>false</EmitOnDownPress>
                    </Connection>
                  </Overview>
                  <WidgetGroup>
                    <Layout>vertical</Layout>
                    <!-- only expand as big as necessary for the buttons -->
                    <Size>max,max</Size>
                    <Children>
                      <!-- row 1 -->
                      <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                          <!--
                              **********************************************
                              Button - Show spinning Vinyl widget
                              **********************************************
                          -->
                          <PushButton>
                            <NumberStates>2</NumberStates>
                            <State>
                              <Number>0</Number>
                              <Pressed>btn_spinny1.png</Pressed>
                              <Unpressed>btn_spinny1.png</Unpressed>
                            </State>
                            <State>
                              <Number>1</Number>
                              <Pressed>btn_spinny1_over.png</Pressed>
                              <Unpressed>btn_spinny1_over.png</Unpressed>
                            </State>
                            <Connection>
                              <ConfigKey>[Spinny1],show_spinny</ConfigKey>
                              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                              <ButtonState>LeftButton</ButtonState>
                            </Connection>
                          </PushButton>

                          <!--
                              **********************************************
                              Button - Beatgrid
                              **********************************************
                          -->
                          <PushButton>
                            <NumberStates>1</NumberStates>
                            <State>
                              <Number>0</Number>
                              <Pressed>btn_beatgrid1_over.png</Pressed>
                              <Unpressed>btn_beatgrid1.png</Unpressed>
                            </State>
                            <Connection>
                              <ConfigKey>[Channel1],beats_translate_curpos</ConfigKey>
                              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                              <ButtonState>LeftButton</ButtonState>
                            </Connection>
                          </PushButton>

                          <!--
                              **********************************************
                              Button- Key lock
                              **********************************************
                          -->
                          <PushButton>
                            <NumberStates>2</NumberStates>
                            <State>
                              <Number>0</Number>
                              <Pressed>btn_keylock1.png</Pressed>
                              <Unpressed>btn_keylock1.png</Unpressed>
                            </State>
                            <State>
                              <Number>1</Number>
                              <Pressed>btn_keylock1_over.png</Pressed>
                              <Unpressed>btn_keylock1_over.png</Unpressed>
                            </State>
                            <Connection>
                              <ConfigKey>[Channel1],keylock</ConfigKey>
                            </Connection>
                          </PushButton>

                        </Children>
                      </WidgetGroup>
                      <!-- row 2 -->
                      <WidgetGroup>
                        <Layout>horizontal</Layout>
                        <Children>
                          <!--
                              **********************************************
                              Button - Quantize
                              **********************************************
                          -->
                          <PushButton>
                            <NumberStates>2</NumberStates>
                            <State>
                              <Number>0</Number>
                              <Pressed>btn_quantize1.png</Pressed>
                              <Unpressed>btn_quantize1.png</Unpressed>
                            </State>
                            <State>
                              <Number>1</Number>
                              <Pressed>btn_quantize1_over.png</Pressed>
                              <Unpressed>btn_quantize1_over.png</Unpressed>
                            </State>
                            <Connection>
                              <ConfigKey>[Channel1],quantize</ConfigKey>
                              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                              <ButtonState>LeftButton</ButtonState>
                            </Connection>
                          </PushButton>


                            <!--
                                **********************************************
                                Button- Repeat (End of track mode)
                                **********************************************
                            -->
                            <PushButton>
                              <NumberStates>2</NumberStates>
                              <State>
                                <Number>0</Number>
                                <Pressed>btn_repeat1.png</Pressed>
                                <Unpressed>btn_repeat1.png</Unpressed>
                              </State>
                              <State>
                                <Number>1</Number>
                                <Pressed>btn_repeat1_over.png</Pressed>
                                <Unpressed>btn_repeat1_over.png</Unpressed>
                              </State>
                              <Connection>
                                <ConfigKey>[Channel1],repeat</ConfigKey>
                              </Connection>
                            </PushButton>

                            <!--
                                **********************************************
                                Button- Eject
                                **********************************************
                            -->
                            <PushButton>
                              <NumberStates>1</NumberStates>
                              <State>
                                <Number>0</Number>
                                <Pressed>btn_eject1_over.png</Pressed>
                                <Unpressed>btn_eject1.png</Unpressed>
                              </State>
                              <Connection>
                                <ConfigKey>[Channel1],eject</ConfigKey>
                                <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
                                <ButtonState>LeftButton</ButtonState>
                                <ConnectValueToWidget>false</ConnectValueToWidget>
                              </Connection>
                            </PushButton>

                        </Children>
                      </WidgetGroup>
                    </Children>
                  </WidgetGroup>
                </Children>
              </WidgetGroup>
              <!-- end deck 1 overview and controls -->

            </Children>
          </WidgetGroup>

          <WidgetGroup>
            <Size>300,me</Size>
            <Style>QGroupBox { background-color: magenta; }</Style>
          </WidgetGroup>

<!-- Deck 2 -->
